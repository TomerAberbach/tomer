{
  "name": "tomer",
  "version": "4.5.0",
  "author": {
    "name": "Tomer Aberbach",
    "email": "tomer@aberba.ch",
    "url": "https://tomeraberba.ch"
  },
  "description": "Probably frobs some stuff.",
  "keywords": [
    "tomer"
  ],
  "homepage": "https://github.com/TomerAberbach/tomer",
  "repository": "TomerAberbach/tomer",
  "bugs": {
    "url": "https://github.com/TomerAberbach/tomer/issues"
  },
  "license": "MIT",
  "files": [
    "dist",
    "tsconfig.json"
  ],
  "type": "module",
  "engines": {
    "node": ">= 18"
  },
  "bin": "./dist/bin.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts"
    },
    "./tsconfig": "./tsconfig.json",
    "./babel": "./dist/configs/babel.js",
    "./commitlint": "./dist/configs/commitlint.json",
    "./eslint": "./dist/configs/eslint.js",
    "./ignore": "./dist/configs/ignore",
    "./lint-staged": "./dist/configs/lint-staged.js",
    "./prettier": "./dist/configs/prettier.js",
    "./rollup": "./dist/configs/rollup.js",
    "./simple-git-hooks": "./dist/configs/simple-git-hooks.json",
    "./vitest": "./dist/configs/vitest.js"
  },
  "scripts": {
    "prepare": "node dist/bin.js install",
    "format": "node dist/bin.js format",
    "lint": "node dist/bin.js lint",
    "typecheck": "node dist/bin.js typecheck",
    "clean": "rimraf dist",
    "build:ts": "tsc --noEmit false --incremental false --allowImportingTsExtensions false --outDir dist",
    "build:json": "cp src/configs/*.json dist/configs && cp src/index.d.ts dist/index.d.ts",
    "build": "run-s build:*",
    "prepublishOnly": "run-s clean build"
  },
  "prettier": "@tomer/prettier-config",
  "dependencies": {
    "@babel/core": "^7.25.8",
    "@babel/preset-env": "^7.25.8",
    "@babel/preset-react": "^7.25.7",
    "@babel/preset-typescript": "^7.25.7",
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@humanwhocodes/gitignore-to-minimatch": "^1.0.2",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^28.0.1",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@tomer/eslint-config": "^2.1.0",
    "@tomer/prettier-config": "^2.1.0",
    "@types/node": "^22.7.7",
    "browserslist": "^4.24.0",
    "cosmiconfig": "^9.0.0",
    "eslint-formatter-pretty": "^6.0.1",
    "etz": "^2.0.1",
    "globby": "^14.0.2",
    "import-meta-resolve": "^4.1.0",
    "is-ci": "^3.0.1",
    "is-path-inside": "^4.0.0",
    "jest-extended": "^4.0.2",
    "jsdom": "^25.0.1",
    "keyalesce": "^2.0.0",
    "lfi": "3.5.0",
    "lint-staged": "^15.2.10",
    "maxmin": "^4.1.0",
    "npm-run-path": "^6.0.0",
    "p-memoize": "^7.1.1",
    "pkg-dir": "^8.0.0",
    "rimraf": "^6.0.1",
    "rollup": "^4.24.0",
    "rollup-plugin-dts": "^6.1.1",
    "rollup-plugin-node-externals": "^7.1.3",
    "rollup-plugin-tree-shakeable": "^1.0.3",
    "semver": "^7.6.3",
    "simple-git-hooks": "^2.11.1",
    "ts-extras": "^0.13.0",
    "type-fest": "^4.26.1",
    "vite-tsconfig-paths": "^5.0.1",
    "widest-line": "^5.0.0",
    "yargs": "^17.7.2",
    "zx": "^8.1.9"
  },
  "peerDependencies": {
    "@vitest/coverage-v8": "^2",
    "eslint": "^8",
    "prettier": "^3",
    "typescript": "^5",
    "vitest": "^2"
  },
  "devDependencies": {
    "@types/babel__core": "^7.20.5",
    "@types/is-ci": "^3.0.4",
    "@types/semver": "^7.5.8",
    "@types/yargs": "^17.0.33",
    "@vitest/coverage-v8": "^2.1.3",
    "eslint": "^8.57.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.3",
    "tomer": "^4.3.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3",
    "vitest": "^2.1.3"
  }
}
